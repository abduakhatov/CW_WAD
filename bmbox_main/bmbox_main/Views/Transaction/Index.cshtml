@model IEnumerable<bmbox_main.Models.TransactionViewModel>
@using Resources;
@{
    ViewBag.Title = @Res.MyBasket;
}

<h2>@Res.MyBasket</h2>
<style type="text/css">
    .Processed {
        background-color: rgba(0,255,0,0.05);
    }
    .Processing {
        background-color: rgba(255,0,0,0.1);
    }
</style>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="@item.Status">
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink(@Res.ProcessBasket, "Edit", new { id=item.Id, email = @User.Identity.Name }) |
            @Html.ActionLink(@Res.Details, "List", new { id=item.Id}) |
            @Html.ActionLink(@Res.Delete, "Delete", new { id=item.Id, email = @User.Identity.Name })
        </td>
    </tr>

}

</table>

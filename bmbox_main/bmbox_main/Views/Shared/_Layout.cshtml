<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    @RenderSection("scripts", required: false)
</head>
<body>
    @using System.Web.Security
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header" style="width: 50%;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <div class="navbar-left">
                    <ul class="nav navbar-nav">
                        <li> @Html.ActionLink("All Products", "Index", "Product", new { area = "" }, new { @class = "navbar-brand" }) </li>

                        <li>
                            @Html.ActionLink("XML", "ConvertToXml", "Product" , new { @class = "navbar-brand"})
                        </li>

                        <li>
                            @Html.ActionLink("CSV", "ConvertToXml", "Product", new {
                            format = "csv"} , new { @class = "navbar-brand"})
                        </li>
                    </ul>
                </div>
            </div>
            <ul class="nav navbar-nav">
                <li>
                    @Html.ActionLink("Logs", "Index", "Log", new {} , new { @class = "navbar-brand"})
                </li>
            </ul>
                <ul class="nav navbar-nav" style="float: right"></ul>
                
                <div class="navbar-right">
                    <ul class="nav navbar-nav">
                        @if (User.Identity.IsAuthenticated) {
                            <li>
                                @Html.ActionLink("My Basket", "Index", "Transaction", new {
                                email= @User.Identity.Name} , new { @class = "navbar-brand"})
                            </li>
                            <li><a>@User.Identity.Name</a></li>
                            <li>@Html.ActionLink(@Resources.Global.Logout, "LogOut", "SignUpIn", null, new { @class = "btn btn-success", @style="color: #fff"})</li>
                        }
                        else {
                            <li>@Html.ActionLink("Register", "Register", "SignUpIn", new { area = "" }, new { @class = "navbar-brand btn"}) </li>

                            <li>@Html.ActionLink("Log in", "Login", "SignUpIn", null, new { @class = "btn btn-success", @style="color: #fff"})</li>
                        }
                        </ul>
                    </div>
                

            </div>
        </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
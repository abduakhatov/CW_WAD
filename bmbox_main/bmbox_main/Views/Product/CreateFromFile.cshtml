@using bmbox_main.Models;
@using Resources;
@{
    ViewBag.Title = @Res.CreateFromFile;
}

<h2>@Res.ProductsImport</h2>

<br><h4> @Res.Template</h4>

    <p style="
    font-family: Courier New, Courier, monospace;
    margin-left: 40px;">{@Res.Name}|{@Res.Brand}|{@Res.ProductType}|{@Res.Price}|{@Res.LeftOnStock}</p>

<br><h4> Example: </h4>
<p style="
    font-family: Courier New, Courier, monospace;
    margin-left: 40px;">G3|LG|Smartphone|599|3 <br>Smart TV|Samsung|Smart TV|999|2</p>

<br><br>

@using(Html.BeginForm("CreateFromFile", "Product", FormMethod.Post, new {enctype = "multipart/form-data"})){
    <input type="file" class="input-box" id="fileToImport" name="fileToImport" />
    <br><input type="submit" value="@Res.Upload" />
}

<br><br>
<h2>@ViewBag.Result</h2>
<br>
<table class="table">
    <tr><th>@Res.Name</th> <th>@Res.Brand</th> <th>@Res.ProductType</th> <th>@Res.Price</th> <th>@Res.LeftOnStock</th></tr>
            @if(ViewBag.Products != null){
                var products = ViewBag.Products as List<ProductViewModel>;
                if(products != null){
                    foreach(var product in products){
                        <tr>
                            <td>@product.Name</td> 
                            <td>@product.Brand</td>
                            <td>@product.Type</td> 
                            <td>@product.Cost</td> 
                            <td>@product.QuantityLeft</td>
                        </tr>
                    }
                }    
            }
</table>